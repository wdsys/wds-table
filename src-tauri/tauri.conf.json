{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "wds-table",
  "version": "0.1.0",
  "identifier": "com.wds-table.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "",
        "label": "main",
        "width": 970,
        "height": 600,
        "resizable": false,
        "minimizable": false,
        "maximizable": false,
        "dragDropEnabled": false,
        "decorations": false
      }
    ],
    "security": {
      "assetProtocol": {
        "enable": true,
        "scope": ["**/*"]
      },
      "csp": "default-src 'self' ipc: http://ipc.localhost; img-src 'self' asset: http://asset.localhost"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "nsis": {
        "languages": ["SimpChinese", "English"],
        "displayLanguageSelector": true
      },
      "wix": {
        "language": "zh-CN"
      },
      "webviewInstallMode": {
        "type": "embedBootstrapper"
      }
    },
    "fileAssociations": [
      {
        "ext": ["table"],
        "name": "WDS Table",
        "description": "WDS Table Document",
        "mimeType": "application/zip"
      }
    ]
  }
}
